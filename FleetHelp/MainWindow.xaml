<Controls:MetroWindow x:Class="FleetHelp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:FleetHelp"
        mc:Ignorable="d"
        Title="Help" Height="350" Width="525" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        WindowTitleBrush="#00A1F1" ShowIconOnTitleBar="True" Icon="Assets/help_icon.ico" BorderThickness="1" 
        GlowBrush="{DynamicResource AccentColorBrush}">

    <Window.Resources>
        <SolidColorBrush x:Key="FleetGreen" Color="#7CBB00" />
        <SolidColorBrush x:Key="FleetRed" Color="#F65314"/>
        <SolidColorBrush x:Key="FleetGray" Color="#737373"/>
        <SolidColorBrush x:Key="FleetYellow" Color="#FFBB00"/>
        <SolidColorBrush x:Key="FleetBlue" Color="#00A1F1"/>
    </Window.Resources>

    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" FontSize="10">
            <TabItem Header="FAQ" Controls:ControlsHelper.HeaderFontSize="18">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer>
                        <TextBlock x:Name="faqs" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="461" Grid.ColumnSpan="2"><Run FontWeight="Bold" Text="What is Fleet?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="Fleet is a suit of collaborative learning tools which primarily aims to promote efficient and "/><Run Text="engaging learning environments."/><LineBreak/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontWeight="Bold" Text="Where can I get technical support"/><Run FontWeight="Bold" Text="?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontWeight="Bold" Text="Phone: "/><Run Text="4921 7000 (external call) or 17000 (internal call) between 8am and 6pm weekdays."/><LineBreak/><Run FontWeight="Bold" Text="Online:"/><Run Text=" through the 24 hour online IT service portal (https://uon.okta.com)"/><LineBreak/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Where can I find tutorials for Fleet features"/><Run FontWeight="Bold" Text="?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="Please refer to the Tutorials tab in this dialog for tutorials of the basic Fleet features."/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontWeight="Bold" Text="Where can I access additional information about the Fleet System?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="If you require additional information regarding the Fleet system and its features, ple"/><Run Text="a"/><Run Text="se"/><Run Text=" refer to the official user manual"/><LineBreak/><Run FontWeight="Bold" Text=""/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontWeight="Bold"/></TextBlock>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Tutorials" Controls:ControlsHelper.HeaderFontSize="18">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer>
                        <TextBlock x:Name="tutorials" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="461" Grid.ColumnSpan="2"><Run FontWeight="Bold" Text="How do I send files?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="1) Open the "/><Run FontWeight="Bold" Text="Share Files"/><Run Text=" application from the application launcher."/><LineBreak/><Run Text="2) Drag-and-drop a file into the grey dropzone. This will open the workstation selection dialog."/><LineBreak/><Run Text="3) "/><Run Text="Select the workstations you wish to send the file to."/><LineBreak/><Run Text="4) Click the "/><Run FontWeight="Bold" Text="Send"/><Run Text=" button."/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="How do I view received files?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="Open the "/><Run FontWeight="Bold" Text="File Inbox"/><Run Text=" application from the application launcher."/><LineBreak/><Run Text=""/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="How do I open a received file?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="1"/><Run Text=") Select the file you wis"/><Run Text="h to view from the "/><Run FontWeight="Bold" Text="File Inbox"/><Run Text="."/><LineBreak/><Run Text="2) With the file selected, click the "/><Run FontWeight="Bold" Text="Open"/><Run Text=" button"/><LineBreak/><LineBreak/><Run FontWeight="Bold" Text="How do I save a section of my screen as an image?"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="1) Open the Screen Capture"/><Run FontWeight="Bold" Text=" application from the application launcher"/><Run FontWeight="Bold" Text="."/><LineBreak/><Run Text="2) Select the capture style you wish to use (free-"/><Run Text="f"/><Run Text="orm, rectangular, window, or fullscreen)"/><LineBreak/><Run Text="3) Based on the capture style "/><Run Text="y"/><Run Text="ou selected, "/><Run Text="outline the area of the screen you wish to 'capture'"/><LineBreak/><Run Text="4) Save the file to the location of your choice as the image type you choose."/><LineBreak/></TextBlock>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="About" Controls:ControlsHelper.HeaderFontSize="18">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="401*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="about" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="245" Width="461" Grid.ColumnSpan="2"><Run FontWeight="Bold" Text="Welcome to Fleet!"/><LineBreak/><Run/><LineBreak/><Run Text="The Fleet system helps to improve your learning or teaching experience by providing a number of easily accessible and intuitive collaborative learning tools. These tools can be used to create an environment which promotes engaged and efficient learning. There are two essential components which make up the Fleet system: the workstation platform and the facilitator web application."/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Technical Support:"/><LineBreak/><Run/><LineBreak/><Run Text="If you need additional technical support for this system, please contact the University of Newcastle IT service desk by phone on 4921 7000 (external call) or 17000 (internal call) between 8am and 6pm weekdays. "/><LineBreak/><Run Text="You can also log requests for support through the 24 hour online IT service portal (https://uon.okta.com) and an IT professional will attend to your request during normal business hours. Please provide a detailed description of your issue when requesting IT help through the service portal. This allows for problems to be quickly and accurately diagnosed. "/><LineBreak/><Run Text=""/></TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
