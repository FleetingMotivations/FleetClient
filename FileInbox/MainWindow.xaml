<Window x:Class="FileInbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileInbox"
        mc:Ignorable="d"
        Title="File Inbox" 
        Height="240" Width="600">
    <Grid>
        <Button x:Name="button" Content="Open..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Copy" Content="Move..." HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75"/>
        <ListView x:Name="listView" Margin="10,35,10,10" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Icon" Width="40"/>
                    <GridViewColumn Header="Filename" Width="330"/>
                    <GridViewColumn Header="Sender" Width="100"/>
                    <GridViewColumn Header="Time Received" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button_Copy1" Content="Refresh" Margin="507,10,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
